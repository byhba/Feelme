<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        tools:context=".ParamsActivity">
    <android.support.v7.widget.Toolbar
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
    />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parametres"
                android:textSize="20dp"
                android:layout_centerInParent="true"
        />
    </RelativeLayout>
        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="30dp"
        >
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                android:elevation="8dp"
            >
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/reglageParams"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_gravity="center_horizontal|center_vertical"
                >
                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/set"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:id="@+id/setImage"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preferences"
                            android:textSize="20dp"
                            android:layout_centerInParent="true"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    android:elevation="8dp"
            >
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/userParams"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_gravity="center_horizontal|center_vertical"
                >
                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/face"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:id="@+id/userImage"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Utilisateur"
                            android:textSize="20dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/user"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    android:elevation="8dp"
            >
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/notificationParams"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_gravity="center_horizontal|center_vertical"
                >
                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/notif"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:id="@+id/notifImage"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:textSize="20dp"
                            android:layout_centerInParent="true"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    android:elevation="8dp"
            >
                <LinearLayout
                        android:id="@+id/feelMeParams"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal|center_vertical"
                >
                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/logo1"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:id="@+id/feelMeImage"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FeelMe"
                            android:textSize="20dp"
                            android:layout_centerInParent="true"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </GridLayout>
</LinearLayout>